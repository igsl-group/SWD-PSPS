@model Psps.Web.ViewModels.DocumentLibraries.DocumentViewModel
@using Psps.Resources;

<div id="editDocumentModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" id="btnCloseDocument" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Document Details</h4>
            </div>

            <div class="modal-body">

                <fieldset>
                    @Html.BootstrapValidationSummary()
                    @Html.HiddenFor(m => m.DocumentId, htmlAttributes: new { @id = "document.documentId" })
                    @Html.HiddenFor(m => m.DocumentLibraryId, htmlAttributes: new { @id = "document.documentLibraryId" })
                    @Html.HiddenFor(m => m.RowVersion, htmlAttributes: new { @id = "document.rowVersion" })

                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-xs-2 control-label" })
                        <div class="col-xs-6">
                            @Html.TextBoxFor(m => m.Name, true, htmlAttributes: new { @id = "document.name", @class = "form-control", @maxlength = 100 })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Remark, new { @class = "col-xs-2 control-label" })
                        <div class="col-xs-10">
                            @Html.TextAreaFor(m => m.Remark, true, htmlAttributes: new { @id = "document.remark", @class = "form-control", @maxlength = 1000 })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Document, new { @class = "col-xs-2 control-label" })
                        <div class="col-xs-10">
                            @Html.FileFor(m => m.Document, htmlAttributes: new { @id = "document.document", @class = "form-control" })
                        </div>
                    </div>
                </fieldset>
            </div>

            <div class="modal-footer">
                <button id="btnCreateDocument" type="button" class="btn btn-sm btn-primary">
                    <span class="icon-ok"></span>&nbsp;Create</button>
                <button id="btnUpdateDocument" type="button" class="btn btn-sm btn-primary">
                    <span class="icon-ok"></span>&nbsp;Update</button>
                <button id="btnCancelDocument" type="button" class="btn btn-sm btn-default">
                    <span class="icon-remove"></span>&nbsp;Cancel</button>
            </div>
        </div>
    </div>
</div>